#include <stdio.h>
#include <math.h>

float const PI = 3.14;

int main(){
    
    float radio, area;

    printf("Bienvenido al programa para calcular el área de un círculo\n");
    printf("Ingrese el radio\n");
    scanf("%f", &radio );
    
    area=radio*radio*PI;
    
    printf("el área de tu circulo es: %f", area);
    
    return 0;
}
