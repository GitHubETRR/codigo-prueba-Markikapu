#include <stdio.h>
#include <stdlib.h>
#include <time.h>

#define N 5 

void Rndom_Mtrz(int matriz[N][N]);
void Num_Max(int *vmax, int *filamax, int *colummax, int matriz[N][N]);

int main() {
    int matriz[N][N];
    int vmax = 0;
    int filamax = 0;
    int colummax = 0;
    Rndom_Mtrz(matriz);
    Num_Max(&vmax, &filamax, &colummax, matriz);
    
    return 0;
}

void Rndom_Mtrz(int matriz[N][N]) {
    srand(time(NULL));
    for (int i = 0; i < N; i++) {
        for (int j = 0; j < N; j++) {
            matriz[i][j] = rand() % 30 + 1; 
            printf("%2d ", matriz[i][j]);  
        }
        printf("\n");
    }    
}

void Num_Max(int *vmax, int *filamax, int *colummax, int matriz[N][N]) {
    for (int i = 0; i < N; i++) {
        for (int j = 0; j < N; j++) {
            if (matriz[i][j] > *vmax) {
                *vmax = matriz[i][j];
                *filamax = i;
                *colummax = j;
            }
        }
    }
    printf("El valor maximo es %d \nSu ubicaci√≥n es...\nFila: %d\nColumna: %d", *vmax, *filamax + 1, *colummax + 1);
}
